
{% extends 'base.html.twig' %}

{% block title %}Détails emprunt{% endblock %}
{% block breadcrumbs %}
<script src="{{ asset('theme/assets/js/jquery.min.js')}}"></script>

        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Emprunt</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Gestion film</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Emprunt </a></li>
                                            <li class="breadcrumb-item active">Détails</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <hr/>
                        {% endblock %}
{% block body %}


         <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

     <div class="row">
                            <div class="col-8">
                                        <h4 class="card-title"><i class="fa fa-angle-right"></i>Détails Emprunt</h4>
</div><div class="col-4">
                                            <a href="{{ path('emprunt_index') }}" class="btn btn-secondary">Retour à la liste</a>

                                   </div>
                               </div>
<br><br>
<div class="table-responsive">
                                            <table class="table table-editable">
        <tbody>


      <tr>
                <th>Film</th>
                <td>{{ emprunt.dvd.film.titre }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ emprunt.dvd.film.langue }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Client</th>
                <td>{{ emprunt.user.nom }} {{ emprunt.user.prenom }}</td>
            </tr>
            {% endif %}
         <tr>
                <th>Date debut</th>
                <td>{{ emprunt.datedebut ? emprunt.datedebut|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ emprunt.datefin ? emprunt.datefin|date('d-m-Y') : '' }}</td>
            </tr>

            <tr>
                <th>Etat</th>
                <td>{{ emprunt.etat }}</td>
            </tr>
            <tr>
<th>Prix</th>
          {% if emprunt.etat =='Encours'%}

     <td>{{ emprunt.dvd.prix }}</td>
                         {% else %}
                              <td>{{ emprunt.prix }}</td>

                    {% endif %}
            </tr>
        </tbody>
    </table>
    </div>
  </div></div></div></div>
{% endblock %}
